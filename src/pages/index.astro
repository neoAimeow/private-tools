---
import Layout from '../layouts/Layout.astro';
import NavCard from '../components/NavCard/index.astro';
import GlobalSettings from '../components/GlobalSettings/index.tsx';
import HeaderAuth from '../components/HeaderAuth/index.tsx';
import links from '../content/links.json';
import { Search, Command, Sparkles, Zap, ArrowRight, Grid3X3, List } from 'lucide-react';

type LinkItem = {
  title: string;
  url: string;
  desc: string;
};

type Category = {
  category: string;
  links: LinkItem[];
};

const data = links as Category[];

const quickLinks = [
  { name: 'App Listing Studio', url: '/tools/app-generator', icon: 'üöÄ' },
  { name: 'JSON Formatter', url: '/tools/json', icon: '‚ú®' },
  { name: 'Icon Cropper', url: '/tools/app-resource-cropper', icon: 'üñºÔ∏è' },
];
---

<Layout title="Dashboard">
  {/* Increased max-width for wider layout */}
  <main class="container mx-auto px-6 pb-32 max-w-[1800px] relative z-10">
    
    {/* Header */}
    <header class="flex items-center justify-between py-5 mb-8 animate-fade-in border-b border-zinc-100/50">
      <div class="flex items-center gap-3 select-none group cursor-pointer">
        <div class="relative w-9 h-9">
          <div class="absolute inset-0 bg-indigo-500 rounded-lg rotate-3 opacity-20 group-hover:rotate-6 transition-transform"></div>
          <div class="absolute inset-0 bg-zinc-900 text-white rounded-lg flex items-center justify-center font-bold text-base shadow-lg group-hover:-translate-y-0.5 transition-transform">
             N
          </div>
        </div>
        <span class="font-bold text-zinc-800 tracking-tight text-lg group-hover:text-indigo-600 transition-colors">Nexus</span>
      </div>
      <div class="flex items-center gap-3 bg-white/50 backdrop-blur-md p-1 rounded-full border border-zinc-200/50 shadow-sm">
         <div class="scale-90 flex items-center gap-2">
            <HeaderAuth client:load />
            <div class="w-px h-3 bg-zinc-200"></div>
            <GlobalSettings client:load />
         </div>
      </div>
    </header>

    {/* Hero Section */}
    <div class="relative flex flex-col items-center justify-center text-center mb-16 animate-slide-up">
      {/* Search Bar - Main Focus */}
      <div class="relative w-full max-w-2xl mx-auto group z-20 mb-10">
        
        {/* Ambient Shadow (Only visible on focus) */}
        <div class="absolute -inset-4 bg-indigo-500/10 rounded-[2rem] blur-2xl opacity-0 group-focus-within:opacity-100 transition-opacity duration-500 pointer-events-none"></div>

        <div class="relative flex items-center bg-white rounded-2xl shadow-[0_2px_10px_rgb(0,0,0,0.03)] border border-zinc-200/80 transition-all duration-300 ease-out group-focus-within:-translate-y-1 group-focus-within:shadow-[0_20px_40px_-10px_rgb(0,0,0,0.08)] group-focus-within:border-indigo-500/30">
          <div class="pl-8 pr-3 text-zinc-400 group-focus-within:text-indigo-600 transition-colors">
             <Search class="w-6 h-6" />
          </div>
          
          <input 
            type="text" 
            id="search-input" 
            placeholder="Search for tools, utilities..." 
            autocomplete="off" 
            class="w-full bg-transparent border-0 rounded-2xl py-5 text-lg text-zinc-800 placeholder:text-zinc-400/80 focus:ring-0 focus:outline-none font-medium caret-indigo-600"
          />
          
          <div class="pr-3 hidden sm:flex items-center">
            <kbd class="inline-flex h-8 items-center gap-1.5 rounded-lg border border-zinc-200 bg-zinc-50 px-3 font-sans text-xs font-medium text-zinc-400 group-focus-within:border-indigo-100 group-focus-within:bg-indigo-50/50 group-focus-within:text-indigo-500 transition-colors">
              <span class="text-sm">‚åò</span> K
            </kbd>
          </div>
        </div>
      </div>

      {/* Quick Chips */}
      <div class="flex flex-wrap justify-center gap-2.5 animate-fade-in opacity-90" style={{animationDelay: '0.1s'}}>
        {quickLinks.map(link => (
           <a href={link.url} class="inline-flex items-center gap-2 px-3 py-1.5 bg-white border border-zinc-200 rounded-lg text-xs font-medium text-zinc-600 hover:border-indigo-300 hover:text-indigo-600 hover:shadow-sm transition-all hover:-translate-y-0.5">
              <span>{link.icon}</span> {link.name}
           </a>
        ))}
      </div>
    </div>

    {/* Content Grid */}
    <div id="content-wrapper" class="space-y-12">
      {data.map((cat, index) => (
        <section 
          class="category-section animate-slide-up fill-mode-backwards" 
          style={`animation-delay: ${0.2 + index * 0.05}ms`} 
          data-category={cat.category.toLowerCase()}
        >
          <div class="flex items-center gap-3 mb-4 border-b border-zinc-100 pb-2">
            <h2 class="text-sm font-bold text-zinc-500 uppercase tracking-widest flex items-center gap-2">
              {cat.category}
            </h2>
          </div>
          
          {/* 
            Ultra-Wide Grid System:
            Mobile: 1 col
            Tablet (sm): 2 col
            Laptop (lg): 3 col
            Desktop (xl): 4 col
            Wide (2xl): 5 col
            Ultra Wide (min-1800px): 6 col
          */}
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5 min-[1800px]:grid-cols-6 gap-4">
            {cat.links.map((link) => (
              <div class="card-wrapper" data-keywords={`${link.title} ${link.desc}`.toLowerCase()}>
                <NavCard {...link} />
              </div>
            ))}
          </div>
        </section>
      ))}
      
      <div id="no-results" class="hidden flex-col items-center justify-center py-20 text-center animate-fade-in">
        <h3 class="text-sm font-semibold text-zinc-900 mb-1">No tools found</h3>
        <button id="clear-search" class="text-xs text-indigo-600 hover:underline">
          Clear Search
        </button>
      </div>
    </div>
  </main>
</Layout>

<script>
  const searchInput = document.getElementById('search-input') as HTMLInputElement;
  const categories = document.querySelectorAll('.category-section');
  const noResults = document.getElementById('no-results');
  const clearBtn = document.getElementById('clear-search');

  function performSearch() {
    const query = searchInput.value.toLowerCase().trim();
    let hasResults = false;

    categories.forEach((catSection) => {
      let hasVisibleCardsInCat = false;
      const cards = catSection.querySelectorAll('.card-wrapper');

      cards.forEach((card) => {
        const keywords = (card as HTMLElement).dataset.keywords || '';
        const isMatch = keywords.includes(query);
        if (isMatch) {
          (card as HTMLElement).style.display = 'block';
          hasVisibleCardsInCat = true;
          hasResults = true;
        } else {
          (card as HTMLElement).style.display = 'none';
        }
      });

      (catSection as HTMLElement).style.display = hasVisibleCardsInCat ? 'block' : 'none';
    });

    if (noResults) {
      if (hasResults) {
        noResults.classList.add('hidden');
        noResults.classList.remove('flex');
      } else {
        noResults.classList.remove('hidden');
        noResults.classList.add('flex');
      }
    }
  }

  searchInput?.addEventListener('input', performSearch);
  
  clearBtn?.addEventListener('click', () => {
    searchInput.value = '';
    performSearch();
    searchInput.focus();
  });

  document.addEventListener('keydown', (e) => {
    if (e.key === '/' && document.activeElement !== searchInput) {
      e.preventDefault();
      searchInput?.focus();
    }
    if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
      e.preventDefault();
      searchInput?.focus();
    }
    if (e.key === 'Escape' && document.activeElement === searchInput) {
      searchInput.blur();
    }
  });
</script>