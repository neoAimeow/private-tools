---
import Layout from '../layouts/Layout.astro';
import NavCard from '../components/NavCard/index.astro';
import links from '../content/links.json';

type LinkItem = {
  title: string;
  url: string;
  desc: string;
};

type Category = {
  category: string;
  links: LinkItem[];
};

const data = links as Category[];
---

<Layout title="Dashboard">
  <main class="container">
    <header class="header">
      <div class="brand">
        <h1>Workspace</h1>
        <div class="badge">PRO</div>
      </div>
      <p>Personal tools & navigation center</p>
    </header>

    <div class="content-wrapper">
      {data.map((cat) => (
        <section class="category">
          <div class="cat-header">
            <h2>{cat.category}</h2>
            <span class="line"></span>
          </div>
          <div class="grid">
            {cat.links.map((link) => (
              <NavCard {...link} />
            ))}
          </div>
        </section>
      ))}
    </div>
  </main>
</Layout>

<style>
  .container {
    max-width: 1024px;
    margin: 0 auto;
    padding: 5rem 2rem;
  }
  
  .header {
    margin-bottom: 4rem;
    
    .brand {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 0.5rem;
    }

    h1 {
      font-size: 2rem;
      font-weight: 700;
      color: var(--text-primary);
      letter-spacing: -0.03em;
    }

    .badge {
      background: var(--text-primary);
      color: white;
      font-size: 0.7rem;
      padding: 0.1rem 0.4rem;
      border-radius: 4px;
      font-weight: 600;
      letter-spacing: 0.05em;
    }
    
    p {
      font-size: 1.1rem;
      color: var(--text-secondary);
      max-width: 500px;
    }
  }

  .category {
    margin-bottom: 4rem;
    
    .cat-header {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 1.5rem;

      h2 {
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: var(--text-tertiary);
        font-weight: 600;
        white-space: nowrap;
      }
      
      .line {
        height: 1px;
        background: var(--border-light);
        flex: 1;
      }
    }
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
    gap: 1.5rem;
  }
</style>