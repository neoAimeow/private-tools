---
import Layout from '../layouts/Layout.astro';
import NavCard from '../components/NavCard/index.astro';
import GlobalSettings from '../components/GlobalSettings/index.tsx';
import HeaderAuth from '../components/HeaderAuth/index.tsx';
import links from '../content/links.json';

type LinkItem = {
  title: string;
  url: string;
  desc: string;
};

type Category = {
  category: string;
  links: LinkItem[];
};

const data = links as Category[];
---

<Layout title="Dashboard">
  <main class="container">
    {/* Sticky Glass Header */}
    <header class="header-nav">
      <div class="brand">
        <div class="logo">M</div>
        <span class="brand-text">My Space</span>
      </div>
      <div class="header-controls">
         <HeaderAuth client:load />
         <div class="divider"></div>
         <GlobalSettings client:load />
      </div>
    </header>

    {/* Hero Section */}
    <div class="hero-section">
      <h1 class="hero-title">Welcome Back</h1>
      <p class="hero-subtitle">What would you like to build today?</p>
      
      <div class="search-container">
        <svg class="search-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
        <input type="text" id="search-input" placeholder="Search tools... (Press '/')" autocomplete="off" />
        <div class="kbd-shortcut">/</div>
      </div>
    </div>

    {/* Content Grid */}
    <div id="content-wrapper" class="content-wrapper">
      {data.map((cat, index) => (
        <section class="category-section" style={`animation-delay: ${index * 0.1}s`} data-category={cat.category.toLowerCase()}>
          <div class="cat-header">
            <h2>{cat.category}</h2>
            <div class="line"></div>
          </div>
          <div class="grid">
            {cat.links.map((link) => (
              <div class="card-wrapper" data-keywords={`${link.title} ${link.desc}`.toLowerCase()}>
                <NavCard {...link} />
              </div>
            ))}
          </div>
        </section>
      ))}
      
      <div id="no-results" class="hidden">
        <div class="no-results-content">
          <div class="icon">üîç</div>
          <h3>No matches found</h3>
          <p>Try searching for something else or clear the filter.</p>
          <button id="clear-search">Clear Search</button>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  // Search Functionality
  const searchInput = document.getElementById('search-input') as HTMLInputElement;
  const categories = document.querySelectorAll('.category-section');
  const noResults = document.getElementById('no-results');
  const clearBtn = document.getElementById('clear-search');

  function performSearch() {
    const query = searchInput.value.toLowerCase().trim();
    let hasResults = false;

    categories.forEach((catSection) => {
      let hasVisibleCardsInCat = false;
      const cards = catSection.querySelectorAll('.card-wrapper');

      cards.forEach((card) => {
        const keywords = (card as HTMLElement).dataset.keywords || '';
        const isMatch = keywords.includes(query);
        if (isMatch) {
          (card as HTMLElement).style.display = 'block';
          hasVisibleCardsInCat = true;
          hasResults = true;
        } else {
          (card as HTMLElement).style.display = 'none';
        }
      });

      // Hide empty categories
      (catSection as HTMLElement).style.display = hasVisibleCardsInCat ? 'block' : 'none';
    });

    if (noResults) {
      noResults.style.display = hasResults ? 'none' : 'flex';
    }
  }

  searchInput?.addEventListener('input', performSearch);
  
  clearBtn?.addEventListener('click', () => {
    searchInput.value = '';
    performSearch();
    searchInput.focus();
  });

  // Keyboard shortcut '/'
  document.addEventListener('keydown', (e) => {
    if (e.key === '/' && document.activeElement !== searchInput) {
      e.preventDefault();
      searchInput?.focus();
    }
    if (e.key === 'Escape' && document.activeElement === searchInput) {
      searchInput.blur();
    }
  });
</script>

<style>
  .container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 2rem 6rem 2rem;
  }
  
  /* Floating Header */
  .header-nav {
    position: sticky;
    top: 1.5rem;
    z-index: 50;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.6rem 0.8rem 0.6rem 1.2rem;
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-radius: var(--radius-full);
    border: 1px solid rgba(255, 255, 255, 0.5);
    box-shadow: var(--shadow-sm);
    margin-bottom: 5rem;
    transition: all 0.3s ease;
    max-width: 900px;
    margin-left: auto;
    margin-right: auto;
  }

  .brand {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    
    .logo {
      width: 36px;
      height: 36px;
      background: var(--text-primary);
      color: white;
      border-radius: var(--radius-sm);
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 700;
      font-size: 1.1rem;
    }

    .brand-text {
      font-size: 1.05rem;
      font-weight: 600;
      color: var(--text-primary);
      letter-spacing: -0.02em;
    }
  }

  .header-controls {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .divider {
    width: 1px;
    height: 20px;
    background: var(--border-strong);
    opacity: 0.3;
    margin: 0 0.5rem;
  }

  /* Hero */
  .hero-section {
    text-align: center;
    margin-bottom: 6rem;
    animation: fadeUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
  }

  .hero-title {
    font-size: 3.5rem;
    font-weight: 800;
    color: var(--text-primary);
    margin-bottom: 0.75rem;
    letter-spacing: -0.04em;
    line-height: 1.1;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--text-secondary);
    margin-bottom: 3rem;
    font-weight: 400;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .search-container {
    position: relative;
    max-width: 500px;
    width: 100%;
    margin: 0 auto;
    
    .search-icon {
      position: absolute;
      left: 1.5rem;
      top: 50%;
      transform: translateY(-50%);
      color: var(--text-tertiary);
      transition: color 0.2s;
      width: 20px;
      height: 20px;
    }

    input {
      width: 100%;
      padding: 1.2rem 1.5rem 1.2rem 3.5rem;
      background: white;
      border: 1px solid transparent;
      border-radius: var(--radius-full);
      font-size: 1rem;
      color: var(--text-primary);
      box-shadow: var(--shadow-md);
      transition: all 0.3s ease;
      outline: none;

      &::placeholder {
        color: var(--text-tertiary);
      }

      &:focus {
        box-shadow: var(--shadow-lg), 0 0 0 2px var(--accent-subtle);
        transform: translateY(-2px);
        
        ~ .search-icon {
          color: var(--accent-primary);
        }
      }
    }

    .kbd-shortcut {
      position: absolute;
      right: 1.5rem;
      top: 50%;
      transform: translateY(-50%);
      background: var(--bg-page);
      border: 1px solid var(--border-strong);
      border-radius: 6px;
      padding: 0.2rem 0.5rem;
      font-size: 0.75rem;
      color: var(--text-secondary);
      font-weight: 500;
      pointer-events: none;
    }
  }

  /* Categories */
  .category-section {
    margin-bottom: 5rem;
    animation: fadeUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) backwards;
  }
  
  .cat-header {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 2rem;

    h2 {
      font-size: 0.8rem;
      text-transform: uppercase;
      letter-spacing: 0.15em;
      color: var(--text-tertiary);
      font-weight: 700;
    }
    
    .line {
      height: 1px;
      background: var(--border-strong);
      flex: 1;
      opacity: 0.3;
    }
  }

  /* Grid */
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
  }

  /* No Results */
  #no-results {
    display: flex;
    justify-content: center;
    padding: 8rem 0;
    
    &.hidden { display: none !important; }

    .no-results-content {
      text-align: center;
      background: white;
      padding: 3rem 4rem;
      border-radius: var(--radius-lg);
      box-shadow: var(--shadow-md);
      
      .icon { font-size: 3rem; margin-bottom: 1.5rem; opacity: 0.3; }
      
      h3 { margin-bottom: 0.5rem; font-size: 1.2rem; font-weight: 600; }
      p { font-size: 0.95rem; margin-bottom: 2rem; color: var(--text-secondary); }
      
      button {
        background: var(--bg-page);
        border: 1px solid var(--border-strong);
        padding: 0.8rem 1.5rem;
        border-radius: var(--radius-md);
        color: var(--text-primary);
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        
        &:hover {
          background: white;
          box-shadow: var(--shadow-sm);
          transform: translateY(-1px);
        }
      }
    }
  }

  @keyframes fadeUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>