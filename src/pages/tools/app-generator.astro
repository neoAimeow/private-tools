---
import Layout from '../../layouts/Layout.astro';
import AppGenerator from '../../components/tools/AppGenerator/index.tsx';
import { ArrowLeft } from 'lucide-react';
---

<Layout title="App Listing Studio">
  <div class="fixed inset-0 flex flex-col bg-zinc-50/50">
    <header class="h-14 shrink-0 flex items-center justify-between px-6 border-b border-zinc-200/50 bg-white/50 backdrop-blur-md z-20">
      <div class="flex items-center gap-4">
        <a 
          href="/" 
          class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-white border border-zinc-200 shadow-sm text-zinc-500 hover:text-zinc-900 hover:shadow transition-all group"
          title="Back to Dashboard"
        >
          <ArrowLeft className="w-4 h-4 group-hover:-translate-x-0.5 transition-transform" />
        </a>
        <div class="h-6 w-px bg-zinc-200"></div>
        <h1 class="text-sm font-semibold text-zinc-800 tracking-tight">App Listing Studio</h1>
      </div>
    </header>

    <main class="flex-1 p-4 md:p-6 overflow-hidden">
      <div class="h-full max-w-[1800px] mx-auto">
        <AppGenerator client:only="react" />
      </div>
    </main>
  </div>
</Layout>