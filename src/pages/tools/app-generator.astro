---
import Layout from '../../layouts/Layout.astro';
import AppGenerator from '../../components/tools/AppGenerator/index.tsx';
import { ArrowLeft } from 'lucide-react';
---

<Layout title="App Tools Generator - My Dashboard">
  <main class="container mx-auto px-4 py-6 max-w-[1600px] h-screen flex flex-col">
    <div class="flex items-center gap-4 mb-6 shrink-0">
      <a 
        href="/" 
        class="inline-flex items-center text-sm font-medium text-muted-foreground hover:text-foreground transition-colors group"
      >
        <ArrowLeft className="w-4 h-4 mr-1 group-hover:-translate-x-1 transition-transform" />
        Back
      </a>
      <h1 class="text-xl font-bold tracking-tight">App Store Optimizer</h1>
    </div>

    <div class="flex-1 min-h-0">
      <AppGenerator client:only="react" />
    </div>
  </main>
</Layout>