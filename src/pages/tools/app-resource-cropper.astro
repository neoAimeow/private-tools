---
import Layout from '../../layouts/Layout.astro';
import AppResourceCropperComponent from '../../components/tools/AppResourceCropper/index.tsx';
---

<Layout title="App Resource Cropper - My Dashboard">
  <main style="max-width: 1200px; margin: 0 auto; padding: 2rem;">
    <a href="/" style="display: inline-block; margin-bottom: 2rem; color: var(--text-secondary); text-decoration: none; font-weight: 500; transition: color 0.2s;">
      &larr; Back to Dashboard
    </a>
    
    <div style="margin-bottom: 2rem;">
      <h1 style="font-size: 2.5rem; font-weight: 800; margin-bottom: 0.5rem; background: linear-gradient(135deg, var(--text-primary) 0%, var(--text-secondary) 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">App Resource Cropper</h1>
      <p style="color: var(--text-secondary); font-size: 1.1rem;">Generate all required app icon sizes and feature graphics from a single source image.</p>
    </div>

    <AppResourceCropperComponent client:load />
  </main>
</Layout>
