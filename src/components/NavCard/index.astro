---
const { title, url, desc } = Astro.props;
---

<a href={url} class="group relative flex flex-col h-full p-6 bg-card text-card-foreground border rounded-xl shadow-sm transition-all hover:shadow-md hover:-translate-y-1 hover:border-primary/50 overflow-hidden">
  <div class="flex justify-between items-start mb-4">
    <div class="flex items-center justify-center w-12 h-12 bg-muted rounded-lg text-lg font-bold group-hover:bg-primary group-hover:text-primary-foreground transition-colors">
      {title[0]}
    </div>
    <svg 
      xmlns="http://www.w3.org/2000/svg" 
      width="24" 
      height="24" 
      viewBox="0 0 24 24" 
      fill="none" 
      stroke="currentColor" 
      stroke-width="2" 
      stroke-linecap="round" 
      stroke-linejoin="round" 
      class="text-muted-foreground w-5 h-5 opacity-0 -translate-x-2 transition-all group-hover:opacity-100 group-hover:translate-x-0"
    >
      <path d="M5 12h14" />
      <path d="m12 5 7 7-7 7" />
    </svg>
  </div>
  
  <h3 class="font-semibold text-lg tracking-tight mb-2 group-hover:text-primary transition-colors">{title}</h3>
  <p class="text-sm text-muted-foreground line-clamp-2">{desc}</p>
</a>