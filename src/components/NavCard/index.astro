---
const { title, url, desc } = Astro.props;
---

<a href={url} class="group relative flex flex-col h-full bg-white hover:bg-white/80 border border-zinc-200/60 hover:border-primary/30 rounded-2xl shadow-sm hover:shadow-xl hover:shadow-primary/5 transition-all duration-300 ease-out overflow-hidden p-6 hover:-translate-y-1">
  
  <div class="flex items-start justify-between mb-5">
    {/* Icon Container */}
    <div class="relative w-14 h-14 flex items-center justify-center rounded-2xl bg-gradient-to-br from-zinc-50 to-zinc-100 border border-zinc-100 shadow-inner group-hover:from-primary/10 group-hover:to-primary/5 group-hover:scale-110 transition-all duration-300">
      <span class="text-xl font-bold text-zinc-700 group-hover:text-primary transition-colors">
        {title[0]}
      </span>
    </div>

    {/* Arrow Icon */}
    <div class="w-8 h-8 rounded-full flex items-center justify-center bg-zinc-50 text-zinc-400 group-hover:bg-primary group-hover:text-white transition-all duration-300 opacity-0 group-hover:opacity-100 transform translate-x-2 group-hover:translate-x-0">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
        <path d="M5 12h14" />
        <path d="m12 5 7 7-7 7" />
      </svg>
    </div>
  </div>
  
  <h3 class="font-bold text-lg text-zinc-900 tracking-tight mb-2 group-hover:text-primary transition-colors">{title}</h3>
  <p class="text-sm text-zinc-500 leading-relaxed line-clamp-2 group-hover:text-zinc-600 transition-colors">{desc}</p>
</a>