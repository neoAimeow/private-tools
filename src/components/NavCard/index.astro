---
const { title, url, desc } = Astro.props;
---

<a href={url} class="group flex items-center gap-3.5 p-3.5 bg-white border border-zinc-200/60 rounded-xl hover:border-indigo-400/50 hover:bg-zinc-50/80 hover:shadow-md hover:-translate-y-0.5 transition-all duration-200">
  
  {/* Icon - Slightly larger */}
  <div class="w-10 h-10 shrink-0 rounded-lg bg-zinc-50 border border-zinc-100 flex items-center justify-center text-base font-bold text-zinc-600 group-hover:bg-indigo-600 group-hover:text-white group-hover:border-indigo-600 transition-colors shadow-sm">
    {title[0]}
  </div>
  
  {/* Text Content */}
  <div class="flex-1 min-w-0 flex flex-col justify-center">
    <div class="flex items-center justify-between">
      <h3 class="text-sm font-semibold text-zinc-900 group-hover:text-indigo-700 truncate pr-2">{title}</h3>
    </div>
    <p class="text-[11px] text-zinc-400 truncate group-hover:text-zinc-500 leading-tight">{desc}</p>
  </div>

  {/* Arrow on Hover */}
  <div class="w-5 h-5 shrink-0 flex items-center justify-center rounded-full bg-zinc-50 text-zinc-300 opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-200">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-3 h-3">
      <polyline points="9 18 15 12 9 6"></polyline>
    </svg>
  </div>
</a>