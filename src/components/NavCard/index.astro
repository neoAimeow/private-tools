---
const { title, url, desc } = Astro.props;
---

<a href={url} class="group flex items-center gap-3 p-2.5 bg-white border border-zinc-200/60 rounded-lg hover:border-indigo-300/50 hover:bg-zinc-50/50 hover:shadow-sm transition-all duration-200">
  
  {/* Micro Icon */}
  <div class="w-9 h-9 shrink-0 rounded-md bg-zinc-50 border border-zinc-100 flex items-center justify-center text-sm font-bold text-zinc-500 group-hover:bg-indigo-600 group-hover:text-white group-hover:border-indigo-600 transition-colors shadow-sm">
    {title[0]}
  </div>
  
  {/* Text Content - Horizontal & Compact */}
  <div class="flex-1 min-w-0 flex flex-col justify-center">
    <div class="flex items-center justify-between">
      <h3 class="text-xs font-semibold text-zinc-800 group-hover:text-indigo-700 truncate pr-2">{title}</h3>
    </div>
    <p class="text-[10px] text-zinc-400 truncate group-hover:text-zinc-500">{desc}</p>
  </div>

  {/* Tiny Arrow on Hover */}
  <div class="w-4 h-4 shrink-0 text-zinc-300 opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="w-3 h-3">
      <polyline points="9 18 15 12 9 6"></polyline>
    </svg>
  </div>
</a>