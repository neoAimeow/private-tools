---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Personal Dashboard" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		/* Base Colors */
		--bg-page: #f8fafc;
		--bg-card: #ffffff;
		--bg-input: #f1f5f9;
		
		/* Text Colors */
		--text-primary: #0f172a;
		--text-secondary: #64748b;
		--text-tertiary: #94a3b8;
		
		/* Brand Colors */
		--accent-primary: #000000; /* Minimalist Black */
		--accent-highlight: #3b82f6;
		
		/* Borders & Shadows */
		--border-light: #e2e8f0;
		--border-hover: #cbd5e1;
		--shadow-sm: 0 1px 2px 0 rgba(0,0,0,0.05);
		--shadow-md: 0 4px 6px -1px rgba(0,0,0,0.08), 0 2px 4px -2px rgba(0,0,0,0.04);
		--shadow-lg: 0 10px 15px -3px rgba(0,0,0,0.08), 0 4px 6px -4px rgba(0,0,0,0.04);
		--shadow-float: 0 20px 25px -5px rgba(0,0,0,0.08), 0 10px 10px -5px rgba(0,0,0,0.03);
		
		/* Layout */
		--radius-sm: 8px;
		--radius-md: 12px;
		--radius-lg: 16px;
	}

	html {
		font-family: 'Inter', system-ui, -apple-system, sans-serif;
		background-color: var(--bg-page);
		color: var(--text-primary);
		-webkit-font-smoothing: antialiased;
	}

	body {
		margin: 0;
		padding: 0;
		min-height: 100vh;
		/* Subtle noise texture for texture */
		background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)' opacity='0.05'/%3E%3C/svg%3E");
		background-attachment: fixed;
	}

	* {
		box-sizing: border-box;
	}

	h1, h2, h3, h4 {
		color: var(--text-primary);
		letter-spacing: -0.02em;
		margin: 0;
	}
	
	p {
		color: var(--text-secondary);
		line-height: 1.6;
	}
</style>